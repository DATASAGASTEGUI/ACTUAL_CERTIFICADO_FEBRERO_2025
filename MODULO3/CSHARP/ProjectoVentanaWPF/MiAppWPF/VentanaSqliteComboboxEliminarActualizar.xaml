<Window x:Class="MiAppWPF.VentanaSqliteComboboxEliminarActualizar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiAppWPF"
        mc:Ignorable="d"
        Title="VentanaSqliteComboboxEliminarActualizar" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
            <TextBlock Text="Seleccionea ID"               
                       HorizontalAlignment="Center" Margin="10"/>
            <ComboBox Name="CboProducto" Width="100" 
                      HorizontalAlignment="Center"  
                      SelectionChanged="CboProducto_SelectionChanged"
                    />
        </StackPanel>

        
        <!-- CAMPOS DEL PRODUCTO -->
        <ScrollViewer Grid.Row="1">
        <StackPanel Margin="20">
            <TextBlock Text="Id Producto" />
            <TextBox x:Name="TxtIdProducto" IsReadOnly="False" Foreground="Red"/>


            <TextBlock Text="Nombre" />
                <TextBox x:Name="TxtNombre" Foreground="Blue"/>

            <TextBlock Text="Precio" />
                <TextBox x:Name="TxtPrecio" Foreground="Blue"/>


            <TextBlock Text="Stock" />
                <TextBox x:Name="TxtStock" Foreground="Blue"/>

            <TextBlock Text="Fecha Creación" />
                <TextBox x:Name="TxtFechaCreacion" Foreground="Blue"/>

            <TextBlock Text="Disponible" />
                <TextBox x:Name="TxtDisponible" Foreground="Blue"/>

            <TextBlock Text="Categoria" />
                <TextBox x:Name="TxtCategoria" Foreground="Blue"/>

        </StackPanel>
        </ScrollViewer>
        
        <!-- BOTONES -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Actualizar" Width="120" Margin="10" Click="BtnActualizar_Click"/>
            <Button Content="Eliminar" Width="120" Margin="10" Click="BtnEliminar_Click"/>
        </StackPanel>

    </Grid>
</Window>
