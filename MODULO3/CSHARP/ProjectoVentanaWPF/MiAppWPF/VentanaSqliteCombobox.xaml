<Window x:Class="MiAppWPF.VentanaSqliteCombobox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiAppWPF"
        mc:Ignorable="d"
        Title="VentanaSqliteCombobox" Height="150" Width="800">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="">
            <StackPanel>
                <TextBlock
                    Text="Selecciona Id Producto"
                    Width="200">
                </TextBlock>
                <ComboBox
                    Name="CboProducto"
                    SelectionChanged="CboProducto_SelectionChanged">
                </ComboBox>
                <TextBox Text="Id:" Name="TxtId"  IsReadOnly="True"/>
                <TextBox Text="Nombre:" Name="TxtNombre" />

                <TextBox Text="Precio:" Name="TxtPrecio" IsReadOnly="True"/>
                <TextBox Text="Stock:" Name="TxtStock" IsReadOnly="True"/>
                <TextBox Text="Fecha Creación:" Name="TxtFechaCreacion" IsReadOnly="True"/>
                <TextBox Text="Disponible:" Name="TxtDisponible" IsReadOnly="True"/>
                <TextBox Text="Categoria:" Name="TxtCategoria" IsReadOnly="True"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
