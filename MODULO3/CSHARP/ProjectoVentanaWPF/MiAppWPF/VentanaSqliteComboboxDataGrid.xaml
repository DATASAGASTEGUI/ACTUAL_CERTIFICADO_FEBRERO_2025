<Window x:Class="MiAppWPF.VentanaSqliteComboboxDataGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiAppWPF"
        mc:Ignorable="d"
        Title="VentanaSqliteComboboxDataGrid" Height="450" Width="800">
    <Grid>

        <StackPanel>
            <TextBlock
                    Text="Selecciona Id Producto"
                    Width="200">
            </TextBlock>
            <ComboBox
                    Name="CboProducto"
                    SelectionChanged="CboProducto_SelectionChanged"
                    >
            </ComboBox>
            <DataGrid Name="DgProducto"
                      AutoGenerateColumns="True"
                      IsReadOnly="True" />
        </StackPanel>
        
        
    </Grid>
</Window>
