<Window x:Class="MiAppWPF.Ventana3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiAppWPF"
        mc:Ignorable="d"
        Title="VENTANA CSHARP"
        Height="325"
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Background="LightGray">
<Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Título -->
        <TextBlock Grid.ColumnSpan="2" Text="Suma de Números"
                   Grid.Row="0"
                   FontSize="24" FontWeight="Bold"
                   Foreground="#2c3e50" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Primer número -->
        <TextBlock Text="Número 1:" Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center" FontSize="14"
                   Foreground="#34495e" Margin="5"/>
        <TextBox x:Name="txtNumero1" Grid.Row="1" Grid.Column="1"
                 FontSize="14" Padding="5" Margin="5"/>

        <!-- Segundo número -->
        <TextBlock Text="Número 2:" Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center" FontSize="14"
                   Foreground="#34495e" Margin="5"/>
        <TextBox x:Name="txtNumero2" Grid.Row="2" Grid.Column="1"
                 FontSize="14" Padding="5" Margin="5"/>

        <!-- Botón -->
        <Button Content="Sumar"
                Grid.Row="3" Grid.ColumnSpan="2"
                Background="#27ae60" Foreground="White"
                FontSize="16" FontWeight="Bold"
                Height="40" Margin="5"
                 Click="BtnSumar_Click"
                />

        <!-- Resultado -->
        <TextBlock x:Name="lblResultado"
                   Grid.Row="4" Grid.ColumnSpan="2"
                   FontSize="18" FontWeight="Bold"
                   Foreground="#2980b9"
                   HorizontalAlignment="Center" Margin="10"/>
    </Grid>
</Window>