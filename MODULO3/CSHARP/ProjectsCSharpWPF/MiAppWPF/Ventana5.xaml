<Window x:Class="MiAppWPF.Ventana5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiAppWPF"
        mc:Ignorable="d"
        Title="VENTANA CSHARP"
        Height="325"
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Background="LightGray">
    <Grid>


        <StackPanel>
            <TextBlock Text="Ingresar su texto?"
                    Margin="5"
                    FontSize="10"/>
            <TextBox Name="TxtMiTexto"
                    Margin="10"
                    FontSize="10"
                    TextAlignment="center"
                    Foreground="blue"/>

            <TextBlock Text="Mensaje:"
                    Margin="5"
                    FontSize="10"/>
            <TextBox Name="TxtMensaje"
                    Margin="10"
                    FontSize="10"
                    TextAlignment="center"
                    Foreground="red"
                    IsReadOnly="true"/>

            <Button Content="Evaluar Texto"
                    Margin="5"
                    FontSize="9"
                    Click="EvaluarTexto_Click"/>
        </StackPanel>

    </Grid>
</Window>