<Window x:Class="MiAppWPF.Ventana4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiAppWPF"
        mc:Ignorable="d"
        Title="VENTANA CSHARP"
        Height="325"
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Background="LightGray">
    <Grid>

<StackPanel>
            <TextBlock Text="SUMAR DOS NUMEROS" Margin="5" FontSize="15" TextAlignment="Center" Foreground="Blue" />

            <TextBlock Text="INGRESAR NUMERO 1?" Margin="5" FontSize="10" />
            <TextBox Name="txtN1" Margin="10" FontSize="10" TextAlignment="Center" Foreground="Blue" />

            <TextBlock Text="INGRESAR NUMERO 2?" Margin="5" FontSize="10" />
            <TextBox Name="txtN2" Margin="10" FontSize="10" TextAlignment="Center" Foreground="Blue" />

            <TextBlock Text="RESULTADO:" Margin="5" FontSize="10" />
            <TextBox Name="txtSuma" Margin="10" FontSize="10" TextAlignment="Center" Foreground="Red" IsReadOnly="True" />

            <!-- RadioButton para seleccionar la operaciÃ³n -->
            <StackPanel Orientation="Horizontal" Margin="5">
                <RadioButton Name="rbSumar" Content="Sumar" GroupName="Operacion" IsChecked="False" Checked="OperacionSeleccionada" />
                <RadioButton Name="rbLimpiar" Content="Limpiar" GroupName="Operacion"               Checked="OperacionSeleccionada" />
                <RadioButton Name="rbCerrar" Content="Cerrar" GroupName="Operacion"                 Checked="OperacionSeleccionada" />
            </StackPanel>
            <Button Content="REINICIAR" Margin="5" FontSize="9" Click="Reiniciar" />
        </StackPanel> 




    </Grid>
</Window>