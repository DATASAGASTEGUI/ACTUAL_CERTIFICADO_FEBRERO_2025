<Window x:Class="MiAppWPF.Ventana2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiAppWPF"
        mc:Ignorable="d"
        Title="VENTANA CSHARP"
        Height="325"
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Background="LightGray">
    <Grid>

        <Label Content="SUMAR DOS NUMEROS"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontFamily="Courier New"
                FontSize="14"
                Background="LightGray"
                Foreground="Blue"
                Height="25"
                Width="Auto"/>
        <Label Content="Número 1?"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Courier New"
                FontSize="10"
                Margin="100,60,0,0"
                Height="20"/>
        <Label Content="Número 2?"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Courier New"
                FontSize="10"
                Margin="100,100,0,0"
                Height="20"/>
        <Label Content="Suma :"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Courier New"
                FontSize="10"
                Margin="100,140,0,0"
                Height="20"/>
        <TextBox x:Name="txtNumero1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Courier New"
                FontSize="10"
                Margin="180,60,0,0"
                Width="120"
                Height="20"
                TextAlignment="Center"
                Foreground="Blue"/>
        <TextBox x:Name="txtNumero2"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Courier New"
                FontSize="10"
                Margin="180,100,0,0"
                Width="120"
                Height="20"
                TextAlignment="Center"
                Foreground="Blue"/>
        <TextBox x:Name="txtSuma"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Courier New"
                FontSize="10"
                Margin="180,140,0,0"
                Width="120"
                Height="20"
                TextAlignment="Center"
                IsReadOnly="True"
                Foreground="Red"/>

        <Button Content="SUMAR"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Courier New"
                FontSize="9"
                Margin="70,200,0,0"
                Width="80"
                Height="20"
                Click="Sumar_Click"/>
        <Button Content="REINICIAR"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Courier New"
                FontSize="9"
                Margin="160,200,0,0"
                Width="80"
                Height="20"
                Click="Reiniciar_Click"/>
        <Button Content="SALIR"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Courier New"
                FontSize="9"
                Margin="250,200,0,0"
                Width="80"
                Height="20"
                Click="Salir_Click"/>


    </Grid>
</Window>