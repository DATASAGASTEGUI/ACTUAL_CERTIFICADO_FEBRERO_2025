<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>OpcionServlet</servlet-name>
        <servlet-class>controlador.OpcionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Opcion3Servlet</servlet-name>
        <servlet-class>controlador.Opcion3Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Opcion4Servlet</servlet-name>
        <servlet-class>controlador.Opcion4Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OpcionServlet</servlet-name>
        <url-pattern>/OpcionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Opcion3Servlet</servlet-name>
        <url-pattern>/Opcion3Servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Opcion4Servlet</servlet-name>
        <url-pattern>/Opcion4Servlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
